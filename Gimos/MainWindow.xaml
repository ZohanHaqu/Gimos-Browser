<Window x:Class="GimosBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gimos" Height="600" Width="1050">
    <Grid>
        <!-- Menu Bar -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Address Bar -->
        <TextBox x:Name="AddressBar" Width="700" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,40,0,0" FontSize="14" />

        <!-- Go Button -->
        <Button x:Name="GoButton" Content="Go" Width="60" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="720,40,0,0" FontSize="14" Click="GoButton_Click" />

        <!-- Back Button -->
        <Button x:Name="BackButton" Content="Back" Width="60" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="790,40,0,0" FontSize="14" Click="BackButton_Click" />

        <!-- Forward Button -->
        <Button x:Name="ForwardButton" Content="Forward" Width="80" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="860,40,0,0" FontSize="14" Click="ForwardButton_Click" />

        <!-- Reload Button -->
        <Button x:Name="ReloadButton" Content="Reload" Width="80" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="950,40,0,0" FontSize="14" Click="ReloadButton_Click" />

        <!-- Web Browser -->
        <WebBrowser x:Name="Browser" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,80,10,10"/>
    </Grid>
</Window>



